<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_dialog</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="Widget.SearchView" parent="android:Widget.Material.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:background">@drawable/background_search</item>
        <item name="android:icon">@drawable/icon_close</item>
        <item name="android:closeIcon">@drawable/icon_close</item>
    </style>

</resources>